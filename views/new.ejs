<%- include("partials/header"); %>
<div class="container">
<h1 style="text-align:center;">
	Create a new Campground
</h1>
	<div style="width:30%; margin: 25px auto; " >
		
<form action="/campgrounds" method="POST">
	<div class="form-group">
	<input type="text" class="form-control" name="name" placeholder="Enter Campground Name">
	</div>
	<div class="form-group">
	<input type="number" class="form-control" name="price" placeholder="Enter price per night"  min="0.01" step="0.01">
	</div>
		<div class="form-group">
	<input type="text" class="form-control" name="image" placeholder="Enter image url">
	</div>
	<div class="form-group">
	<input type="text" class="form-control" name="description" placeholder="Enter Description">
	</div>
			<div class="form-group">	
	<button class="btn btn-lg btn-primary btn-block">
		Submit
	</button>
	</div>
</form>
	<a href="/campgrounds">Go Back</a>
</div>
