<%- include("partials/header"); %>
<div class="container">
	<header class="jumbotron">
		
		 <div class="container">
		<h1>
			Welcome to YelpCamp!
		</h1>
		<p>
			View our hand-picked Campgrounds from all over the world	
		</p>
		<p>
			<a href="/campgrounds/new" class="btn btn-primary">Add new campground</a>	
		</p>
		</div> 
	</header>	
</div>
<div class="container">
<div class="row" style="display:flex; flex-wrap:wrap;">
<% campgrounds.forEach(function(campground){ %>
	<div class = "col-12 col-md-6 col-lg-3">
	<div class="thumbnail">
		<img src="<%= campground.image%>">
		<div class="caption text-center">
		<h4>
			<%=campground.name%>
		</h4>
			<div style="padding-bottom:10px">
				<span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
			</div>
			<a href="campgrounds/<%= campground._id %>" class="btn btn-primary">See Details</a>
		</div>
		</div>
	</div>
<% }); %>
</div>
</div>
<div class="footer">
	YelpCamp, Copyright &copy; 2020
</div>
<%- include("partials/footer"); %>